{
  "name": "supermark",
  "version": "1.0.0",
  "description": "web design portfolio",
  "author": {
    "name": "Vladimir Nikishin",
    "email": "vlaimir.nikishin@gmail.com",
    "url": "https://super-mark.ru/"
  },
  "license": "MIT",
  "scripts": {
    "start": "concurrently --kill-others 'gulp s' 'gulp w'"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=3"
  },
  "dependencies": {
    "bootstrap": "^4.3.1"
  },
  "devDependencies": {
    "@popperjs/core": "^2.10.2",
    "the-new-css-reset": "elad2412/the-new-css-reset"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-sass-guidelines"
    ],
    "ignoreFiles": [
      "**/*.css",
      "**/*.html",
      "node_modules/**/*"
    ],
    "rules": {

      "comment-whitespace-inside": "always",
      "font-family-name-quotes": "always-where-recommended",
      "function-parentheses-space-inside": "never-single-line",
      "max-nesting-depth": 3,
      "media-feature-colon-space-after": "always",
      "media-feature-colon-space-before": "never",
      "media-feature-range-operator-space-after": "always",
      "media-feature-range-operator-space-before": "always",
      "no-duplicate-selectors": true,
      "number-leading-zero": "never",
      "order/order": [
        "custom-properties",
        "dollar-variables",
        {
          "type": "at-rule",
          "name": "include"
        },
        "declarations",
        "rules",
        {
          "type": "at-rule",
          "name": "include",
          "hasBlock": true
        }
      ],
      "order/properties-alphabetical-order": null,
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "appearance"
          ]
        }
      ],
      "rule-empty-line-before": [
        "always",
        {
          "ignore": [
            "after-comment",
            "inside-block"
          ]
        }
      ],
      "scss/at-extend-no-missing-placeholder": null,
      "scss/dollar-variable-colon-space-after": null,
      "selector-attribute-quotes": "always",
      "selector-class-pattern": "[a-zA-Z0-9]+[a-za-zA-Z0-9-_]*",
      "selector-no-qualifying-type" : [
        true,
        {"ignore": ["attribute"]}
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "globals": {
      "wp": true
    },
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jquery": true
    },
    "plugins": [
      "eslint-plugin-prettier",
      "import"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "settings": {
      "import/core-modules": [],
      "import/ignore": [
        "node_modules",
        "\\.(coffee|scss|css|less|hbs|svg|json)$"
      ]
    },
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "max-len": [
        "error",
        {
          "ignoreComments": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true
        }
      ],
      "no-multi-spaces": [
        "error",
        {
          "exceptions": {
            "BinaryExpression": true,
            "VariableDeclarator": true
          }
        }
      ],
      "no-plusplus": [
        2,
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "quotes": [
        "error",
        "single"
      ]
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "printWidth": 40000,
          "bracketSameLine": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
